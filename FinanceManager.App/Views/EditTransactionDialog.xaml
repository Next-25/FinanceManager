<Window x:Class="FinanceManager.App.Views.EditTransactionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Операция" Height="270" Width="420" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" WindowStyle="SingleBorderWindow" Icon="/Images/Icon.png">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Дата:" Margin="0,0,8,8" VerticalAlignment="Center"/>
        <DatePicker Grid.Row="0" Grid.Column="1" SelectedDate="{Binding Date, Mode=TwoWay}" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Тип:" Margin="0,0,8,8" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Types}" SelectedItem="{Binding Type}" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Категория:" Margin="0,0,8,8" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding Categories}" SelectedItem="{Binding Category}" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Сумма:" Margin="0,0,8,8" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Amount, Mode=TwoWay, StringFormat={}{0:C}, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8" GotFocus="TextBox_GotFocus" Language="ru-RU"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Описание:" Margin="0,0,8,8" VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Description, Mode=TwoWay}" Margin="0,0,0,8" GotFocus="TextBox_GotFocus"/>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="90" Margin="0,12,8,0"
                    IsDefault="True"
                    Click="Ok_Click" Height="30"/>
            <Button Content="Отмена" Width="90" Margin="0,12,0,0"
                    IsCancel="True"
                    Click="Cancel_Click" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
